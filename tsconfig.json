{
  "include": ["**/**.js"],
  "exclude": ["dist", "test", "coverage", "node_modules"],
  "compilerOptions": {
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020"],
    "module": "commonjs",
    "newLine": "lf",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020",
    "noImplicitAny": false
  }
}
